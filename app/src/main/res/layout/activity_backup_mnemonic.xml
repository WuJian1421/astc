<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:title="@string/backup_mnemonic" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bm1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/determine_mnemonic"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <com.example.astc.util.views.SmartTextView
        android:id="@+id/tv_bm2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:text="@string/sequence_mnemonic"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/lv_backup"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/rainbow_mnemonic"
        android:minHeight="25dp"
        android:padding="5dp"
        app:isIndicator="true"
        app:labelBackground="@drawable/round_rectangle_bg"
        app:labelTextColor="@android:color/black"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="10dp"
        app:labelTextPaddingRight="10dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextSize="14sp"
        app:lineMargin="10dp"
        app:selectType="MULTI"
        app:wordMargin="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/lv_show_backup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:minHeight="25dp"
        android:padding="5dp"
        app:labelBackground="@drawable/round_rectangle_bg"
        app:labelTextColor="@android:color/black"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="10dp"
        app:labelTextPaddingRight="10dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextSize="14sp"
        app:lineMargin="10dp"
        app:selectType="MULTI"
        app:wordMargin="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bu_backup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@mipmap/bu_yellow"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@android:color/white" />
</LinearLayout>