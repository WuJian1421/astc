<?xml version="1.0" encoding="utf-8"?>
<com.example.astc.util.views.photo.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.adapter.PhotoAdapter">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_photo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <FrameLayout
        android:id="@+id/fl_photo_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingStart="20dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="20dp"
        tools:ignore="RtlHardcoded">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/iv_photo_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/selector_checkbox"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </FrameLayout>
</com.example.astc.util.views.photo.SquareFrameLayout>