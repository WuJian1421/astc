<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:drawableStart="@mipmap/bu_yellow_user"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/user_name"
                android:textSize="15sp" />

            <com.example.astc.util.views.ClearEditText
                android:id="@+id/et_user_account"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/please_enter_user_name"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:drawableStart="@mipmap/bu_yellow_lock"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/login_password"
                android:textSize="15sp" />

            <com.example.astc.util.views.PasswordEditText
                android:id="@+id/et_password_account"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/please_enter_your_password"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bu_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@mipmap/bu_yellow"
        android:gravity="center"
        android:text="@string/next_step"
        android:textColor="@android:color/white" />
</LinearLayout>